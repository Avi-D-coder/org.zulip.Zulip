{
  "app-id": "org.zulip.Zulip",
  "branch": "stable",
  "base": "io.atom.electron.BaseApp",
  "base-version": "stable",
  "runtime": "org.freedesktop.Sdk",
  "runtime-version": "1.6",
  "sdk": "org.freedesktop.Sdk",
  "command": "zulip",
  "rename-icon": "zulip",
  "rename-desktop-file": "zulip.desktop",
  "separate-locales": false,
  "finish-args": [
    "--device=dri",
    "--filesystem=home",
    "--share=ipc",
    "--share=network",
    "--socket=pulseaudio",
    "--socket=x11"
  ],
  "modules": [
    {
      "name": "zulip",
      "buildsystem": "simple",
      "build-commands": [
        "ar -x Zulip-*.deb",
        "rm -f Zulip-*.deb",
        "tar -xf data.tar.xz",
        "cp -r usr/* /app",
        "mkdir -p /app/bin",
        "cp -r opt/Zulip/* /app/bin",
        "desktop-file-edit --set-key=Exec --set-value='zulip %U' /app/share/applications/zulip.desktop",
        "install -Dm644 org.zulip.Zulip.appdata.xml /app/share/appdata/org.zulip.Zulip.appdata.xml"
      ],
      "sources": [
        {
          "type": "file",
          "only-arches": ["x86_64"],
          "url": "https://github.com/zulip/zulip-electron/releases/download/v2.0.0/Zulip-2.0.0-amd64.deb",
          "sha256": "81334f9ab8c9714245c8412db0da2608532d4a352e09b2d57ae2178c5c814c1e"
        },
        {
          "type": "file",
          "only-arches": ["i386"],
          "url": "https://github.com/zulip/zulip-electron/releases/download/v2.0.0/Zulip-2.0.0-i386.deb",
          "sha256": "9bab88318a838059c6da289272cf08d89b05e3a8e1756475295797d3fb2a07f1"
        },
        {
          "type": "file",
          "path": "org.zulip.Zulip.appdata.xml"
        },
        {
          "type": "archive",
          "url": "https://github.com/zulip/zulip-electron/archive/v2.0.0.tar.gz",
          "sha256": "d30e4b958a9417a250388b4c8ab004682269d30cca33dcc725770864a56568ce"
        }
      ]
    }
  ]
}
